<div class="row">
  <div class="col-lg-12">
    <div class="card">
      <div class="card-header">
        <h4 class="card-title">Infor</h4>
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col-md-12">
            <div class="mb-3">
              <label for="example-text-input" class="form-label">Title</label>
              <input class="form-control" 
              value="{{career.title}}"
              type="text" id="title">
            </div>
            <div class="mb-3">
              <label for="example-text-input" class="form-label">Position</label>
              <input class="form-control" type="text"  value="{{career.position}}" id="position">
            </div>
            <div class="mb-3">
              <label for="example-text-input" class="form-label">Expiration Work</label>
              <input class="form-control" type="text"  value="{{career.expirationWork}}" id="exWork">
            </div>
          </div>
          <div class="mb-3">
            <label for="example-text-input" class="form-label">Salary</label>
            <input class="form-control" type="text"  value="{{career.salary}}"  id="salary">
          </div>
          <div class="mb-3">
            <label for="example-text-input" class="form-label">Location</label>
            <input class="form-control" type="text"  value="{{career.location}}" id="location">
          </div>
          <div class="mb-3">
            <label for="example-text-input" class="form-label">Time Title</label>
            <input class="form-control" type="text" value="{{career.timeTable.timeTitle}}" id="timeAble">
          </div>
        </div>
        <div class="mb-3">
          <label for="example-text-input" class="form-label">Time Work</label>
          <input class="form-control" type="text" value="{{career.timeTable.timeWork}}" id="timeWork">
        </div>
        <div class="mb-3">

          <label class="form-label">Select Tags</label>
          <select class="form-control" name="choices-multiple-remove-button" data-trigger
            id="choices-multiple-remove-button" placeholder="This is a placeholder" multiple>
             {{#each career.tags}}
            <option selected="selected" value="{{this._id}}">{{this.name}}</option>
            {{/each}}
            {{#each tags}}
            <option value="{{this._id}}">{{this.name}}</option>
            {{/each}}
          </select>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-12">
        <label for="example-text-input" class="form-label">Thumbnail</label>
        <div role="button">
          <form action="#" class="dropzone">
            <div class="fallback">
              <input name="file" type="file" multiple="multiple">
            </div>
            <div class="dz-message needsclick">
              <div class="mb-3 d-flex justify-content-center">
                <i class="display-4 text-muted bx bx-cloud-upload"></i>
              </div>

              <h5 class="text-center">Drop files here or click to upload.</h5>
            </div>
          </form>
        </div>
      </div> <!-- end col -->
    </div> <!-- end row -->
  </div>
</div>
<div class="card">
  <div class="card-header">
    <h4 class="card-title">Content</h4>
  </div>
  <div class="card-body">
    <div id="ckeditor-classic"></div>
  </div>
</div>
 <div class="d-flex justify-content-end">
    <button class="btn btn-primary" id="update">Update</button>
    </div>
</div>
<!-- end col -->
