<div class="row">
  <div class="col-12">
    <div class="page-title-box d-sm-flex align-items-center justify-content-between">
      <h4 class="mb-sm-0 font-size-18">Update news</h4>

      <div class="page-title-right">
        <ol class="breadcrumb m-0">
          <li class="breadcrumb-item"><a href="/">Home</a></li>
          <li class="breadcrumb-item active">Update news</li>
        </ol>
      </div>

    </div>
  </div>
</div>
<p style="display:none" id="slug">{{article.slug}}</p>
<div class="modal fade" id="ignismyModal" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
            </div>
            <div class="modal-body">

                <div class="thank-you-pop">
                    <img src="/assets/logos/Green-Round-Tick.png" alt="logon" />
                    <h1 class="text-center">Success!</h1>
                </div>

            </div>

        </div>
    </div>
</div>
<!-- end page title -->

<div class="row">
  <div class="col-lg-12">
    <div class="card">
      <div class="card-header">
        <h4 class="card-title">Infor</h4>
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col-md-12">
            <div class="mb-3">
              <label for="example-text-input" class="form-label">Title</label>
              <input class="form-control" 
              value="{{article.title}}" 
              type="text" id="title">
            </div>
             <div class="mb-3">
              <label for="example-text-input" class="form-label">Sub Title</label>
              <input class="form-control" type="text"
               value="{{article.subTitle}}" 
               id="subT">
            </div>
            <div class="mb-3">
              <label class="form-label">Select Category</label>
              <select class="form-select"  id="cate">
                 <option value="{{article.category._id}}">{{article.category.title}}</option>
                {{#each categories}}
                <option value="{{this._id}}">{{this.title}}</option>
                {{/each}}
                
              </select>
            </div>
             <div class="mb-3">
              <label for="example-text-input" class="form-label">Source:</label>
              <input class="form-control" 
              value="{{article.source}}"
              type="text" id="source">
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-12">
            <label for="example-text-input" class="form-label">Thumbnail</label>
            <div role="button">
              <form action="#" class="dropzone">
                <div class="fallback">
                  <input name="file" type="file" multiple="multiple">
                </div>
                <div class="dz-message needsclick">
                  <div class="mb-3 d-flex justify-content-center">
                    <i class="display-4 text-muted bx bx-cloud-upload"></i>
                  </div>

                  <h5 class="text-center">Drop files here or click to upload.</h5>
                </div>
              </form>
            </div>
          </div> <!-- end col -->
        </div> <!-- end row -->
      </div>
    </div>
    <div class="card">
      <div class="card-header">
        <h4 class="card-title">Content</h4>
      </div>
      <div class="card-body">
        <div id="ckeditor-classic"></div>
      </div>
    </div>
     <div class="d-flex justify-content-end">
    <button class="btn btn-primary" id="update">Update</button>
      <button type="button" class="btn btn-danger waves-effect waves-light ml-2"
      style="margin-left: 5px;"
       data-bs-toggle="modal"
        data-bs-target="#myModal">Update Status</button>
      <!-- sample modal content -->
      <div id="myModal" class="modal fade" tabindex="-1" aria-labelledby="myModalLabel" aria-hidden="true"
        data-bs-scroll="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="myModalLabel">Update status new</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <div class="form-check mb-3">
                <input class="form-check-input" type="radio" name="formRadios" value="1" id="formRadios1">
                <label class="form-check-label" for="formRadios1">
                  Publish
                </label>
                </div>
                <div class="form-check mb-3">
                 <input class="form-check-input" type="radio" name="formRadios" value="0" id="formRadios2">
                <label class="form-check-label" for="formRadios2">
                  Draff
                </label>
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary waves-effect" data-bs-dismiss="modal">Close</button>
              <button type="button" id="status" class="btn btn-danger waves-effect waves-light">Update</button>
            </div>
          </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
      </div>
    </div>
  </div>
  <!-- end col -->
</div>
<p style="display:none" id="con">{{article.content}}</p>

